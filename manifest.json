{
  "manifest_version": 3,
  "name": "LLM Perf Reporter",
  "version": "0.1.0",
  "description": "Generate LLM-ready performance/memory reports (Next.js/Three.js friendly).",
  "permissions": [
    "debugger",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "LLM Perf Reporter"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/monitor.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    }
  ],
  "options_page": "options.html"
}
